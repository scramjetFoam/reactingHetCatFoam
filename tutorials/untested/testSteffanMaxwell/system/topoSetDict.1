actions
(
    {
        name minMaxSet;
        type cellSet;
        action new;
        source cylinderToCell;
        sourceInfo
        {
            p1       (-1 0.00005 0.00015); // start point on cylinder axis
            p2       (1 0.00005 0.00015);   // end point on cylinder axis
            radius  0.01;
        }
    }
    {
        name minMaxSet;
        type cellSet;
        action delete;
        source zoneToCell;
        sourceInfo
        {
            name coatZone;      // Name of cellZone, regular expressions allowed
        }
    }
    {
        name minMaxZone;
        type cellZoneSet;
        action new;
        source setToCellZone;
        sourceInfo
        {
            set minMaxSet;           // name of cellSet
        }
    }
);

