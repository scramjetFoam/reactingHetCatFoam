FoamFile
{
    version     1.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField	uniform	(0.1 0 0.0);

boundaryField
{
    inlet
    {
        type    fixedValue;
	    value	uniform (0.1 0 0.0);
    }
    
    outlet
    {
        type            inletOutlet;
        // type            zeroGradient;
        value           $internalField;
        inletValue      uniform (0 0 0);
        phi             phi;
    }
    
   cylinder 
    {
        // type    noSlip;
        type    slip;
    }
    sides
    {
        type    slip;
    }
}


