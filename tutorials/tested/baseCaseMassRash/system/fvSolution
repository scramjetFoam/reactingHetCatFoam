FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(p|Phi)"
    {
        solver          PCG;
        preconditioner
        {
            preconditioner  GAMG;
            tolerance       1e-07;
            relTol          0.01;
            smoother        symGaussSeidel;
            nPreSweeps      0;
            nPostSweeps     2;
            nFinestSweeps   2;
            cacheAgglomeration true;
            nCellsInCoarsestLevel 400;
            agglomerator    faceAreaPair;
            processorAgglomerator   procFaces;
            nAgglomeratingCells     10;
            mergeLevels             1;
        }
        tolerance       1e-07;
        relTol          0.01;
    }

    "(U)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0.01;
    }

    "T"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-06;
        relTol          0.01;
    }
    
    "(h|k|omega|epsilon)"
    {
        solver          GAMG;
        tolerance       1e-6;
        relTol          0.01;
        smoother        GaussSeidel;
        nPreSweeps      0;
        nPostSweeps     2;
        nFinestSweeps   2;
        cacheAgglomeration      on;
        nCellsInCoarsestLevel   10;
        agglomerator            faceAreaPair;
        processorAgglomerator   procFaces;
        nAgglomeratingCells     400;
        mergeLevels             1;
    }
    
    "(customSolver)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-6;
        relTol          0.01;
    }  

}

SIMPLE
{
    nUCorrectors 0;            
    nConcCorrectors  1;              // n of concentration calculations for each specie
    nTempCorrectors  3;	            // n of temperature corrections 
    nNonOrthogonalCorrectors 4;     // n of presure corrections (not necessary on this mesh)
    debug 2;    // debug level
    consistent yes;
    
    residualControl
    {
        p           1e-7;
        U           1e-5;
        T           1e-9;
        "(customSolver)"    1e-8;
    }
}

relaxationFactors
{
    fields
    {
        p           0.1;
        U           0.2;
        // T           0.5;
        //  "(customSolver)" 	 0.1;
    }
    equations
    {
        "(p|U)" 0.9;
        "(T)" 0.8;
        "(customSolver)" 0.8;
    }
}
