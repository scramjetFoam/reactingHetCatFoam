FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(p|Phi)"
    {
        solver          PCG;
        preconditioner
        {
            preconditioner  GAMG;
            tolerance       1e-07;
            relTol          0.05;
            smoother        symGaussSeidel;
            nPreSweeps      0;
            nPostSweeps     2;
            nFinestSweeps   2;
            cacheAgglomeration true;
            nCellsInCoarsestLevel 10;
            agglomerator    faceAreaPair;
            processorAgglomerator   procFaces;
            nAgglomeratingCells     10;
            mergeLevels             1;
        }
        tolerance       1e-08;
        relTol          0.05;
    }

    "(U)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-10;
        relTol          0.05;
    }

    "T"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-08;
        relTol          0.01;
    }
    
    "(h|k|omega|epsilon)"
    {
        solver          GAMG;
        tolerance       1e-8;
        relTol          0.05;
        smoother        GaussSeidel;
        nPreSweeps      0;
        nPostSweeps     2;
        nFinestSweeps   2;
        cacheAgglomeration      on;
        nCellsInCoarsestLevel   10;
        agglomerator            faceAreaPair;
        processorAgglomerator   procFaces;
        nAgglomeratingCells     400;
        mergeLevels             1;
    }
    
    "(CO|O2|CO2|N2O|N2|NO)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-08;
        relTol          0.01;
    }  

}

SIMPLE
{
    nUCorrectors 0;            
    nConcCorrectors 2;              // n of concentration calculations for each specie
    nTempCorrectors nTCorr;	            // n of temperature corrections 
    nNonOrthogonalCorrectors 4;     // n of presure corrections (not necessary on this mesh)

    consistent yes;
    
    residualControl
    {
        p           1e-7;
        U           1e-5;
        T           1e-9;
        "(CO|NO|O2|N2O|CO2)"    1e-8;
    }
}

relaxationFactors
{
    fields
    {
        p           0.2;
        U           0.4;
        // T           0.5;
        // "(CO|O2|CO2)" 	 0.0001;
    }
    equations
    {
        "(p|U)" 0.9;
        "(T)" 0.98;
        "(CO|O2|CO2)" 	 0.98;
    }
}
// ************************************************************************* //
