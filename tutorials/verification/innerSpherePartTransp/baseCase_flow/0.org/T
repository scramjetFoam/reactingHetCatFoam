FoamFile
{
    version     1.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform isoT;

boundaryField
{
    inlet
    {
        type    fixedValue;
        value   uniform isoT;
    }
    outlet
    {
        type    zeroGradient;
    }
    sides
    {
        type    symmetry;
    }
    sphere
    {
        type    fixedValue;
        value   uniform isoT;
    }
}
